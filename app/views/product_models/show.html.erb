<h1> Mais informações do modelo de produto </h1>

<dl>
  <dt>
    <h2> <%= @product_model.name %></h2>
  </dt>
  <div>
    <dd><strong>SKU: </strong><%= @product_model.sku %></dd>
    <dd><strong>Fornecedor: </strong><td><%= link_to @product_model.supplier.brand_name, @product_model.supplier %></td>
    <dd><strong>Dimensão: </strong><%= @product_model.width %>cm x <%= @product_model.height %>cm x <%= @product_model.depth %>cm</dd>
    <dd><strong>Peso: </strong><%= @product_model.weight %>g</dd>
  </div>
</dl>

<div>
  <%= link_to('Editar', edit_product_model_path(@product_model.id))%>
  <br />
</div> 

