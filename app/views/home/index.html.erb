<section id='warehouses''>
  <h2> Galpões </h2>
  
  <div>
    <%= link_to('Criar Galpão', new_warehouse_path) %>
  </div>

  <% @warehouses.each do |w| %>
    <div>
      <dl>
        <dt>
        <h3><%= link_to(w.name, warehouse_path(w.id)) %></h3>
        </dt>
        <dd> Código: <%= w.code %> </dd> 
        <dd> Cidade: <%= w.city %> </dd> 
        <dd> <%= w.area %> m² </dd> 
      </dl>
    </div>
  <% end %>

  <% if @warehouses.empty? %>
    <p> Nenhum galpão cadastrado. </p>
  <% end %>
</section>